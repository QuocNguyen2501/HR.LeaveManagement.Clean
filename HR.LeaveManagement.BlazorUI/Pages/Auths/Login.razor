@page "/users/login"
@layout AuthLayout


<div id="auth">
	<div class="row container-fluid">
		<div id="left-side" class="col-md-7">
			<img id="working-img" src="images/working.png" />
		</div>
		<div id="right-side" class="col-md-5">
			<div id="auth-form">
				<div id="auth-header">
					<img id="working-img" src="images/app-icon.svg" />
					<h2><strong>Welcome back !</strong></h2>
					<h6>Please enter your details</h6>
					@if (string.IsNullOrEmpty(Msg) == false)
					{
						<div class="alert alert-danger">
							@Msg
						</div>
					}
				</div>
				<div id="login-form">
					<EditForm Model="@Model" OnValidSubmit="HandleLogin">
						<DataAnnotationsValidator />
						<div class="form-group">
							<label class="control-label">Email</label>
							<InputText id="userName" class="form-control" @bind-Value="@Model.Email"></InputText>
						</div>
						<div class="form-group">
							<label class="control-label">Password</label>
							<InputText type="password" id="password" class="form-control" @bind-Value="@Model.Password"></InputText>
						</div>
						<div class="slot-start">
							<a href="/users/register">Register an account</a>
						</div>
						<div class="slot-end">
							<input type="submit" value="Login" id="btn-login" class="btn btn-primary" />
						</div>
					</EditForm>
				</div>
			</div>
		</div>
	</div>
</div>

