@page "/users/login"
@layout AuthLayout

<h3>Login</h3>
@if (string.IsNullOrEmpty(Msg) == false)
{
    <div class="alert alert-danger">
        @Msg
    </div>
}

<div id="login-form">
    <EditForm Model="@Model" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator/>
        <ValidationSummary/>
        <div class="form-group">
            <label class="control-label">Email</label>
            <InputText id="userName" class="form-control" @bind-Value="@Model.Email"></InputText>
        </div>
        <div class="form-group">
            <label class="control-label">Password</label>
            <InputText type="password" id="password" class="form-control" @bind-Value="@Model.Password"></InputText>
            <ValidationMessage For="@(()=>Model.Password)" />
        </div>
        <div class="slot-start">
            <a href="/users/register">Register an account</a>
        </div>
        <div class="slot-end">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </EditForm>
</div>


