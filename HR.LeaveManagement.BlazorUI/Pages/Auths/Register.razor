@page "/users/register"
@layout AuthLayout

<div id="auth">
	<div class="row container-fluid">
		<div id="left-side" class="col-md-7">
			<img id="working-img" src="images/working.png" />
		</div>
		<div id="right-side" class="col-md-5">
			<div id="auth-form">
				<div id="auth-header">
					<img id="working-img" src="images/app-icon.svg" />
					<h2><strong>Welcome to Leave Management !</strong></h2>
					<h6>Please enter your details</h6>
					@if (string.IsNullOrEmpty(Message) == false)
					{
						<div class="alert alert-danger">
							@Message
						</div>
					}
				</div>
				<div id="register-form">
					<EditForm Model="@Model" OnValidSubmit="HandleRegister">
						<DataAnnotationsValidator />
						<div class="form-group">
							<label asp-for="FirstName" class="control-label">First Name</label>
							<InputText id="FirstName" class="form-control" @bind-Value="@Model.FirstName"></InputText>
						</div>
						<div class="form-group">
							<label asp-for="LastName" class="control-label">Last Name</label>
							<InputText id="LastName" class="form-control" @bind-Value="@Model.LastName"></InputText>
						</div>
						<div class="form-group">
							<label asp-for="Email" class="control-label">Email</label>
							<InputText id="Email" class="form-control" @bind-Value="@Model.Email"></InputText>
						</div>
						<div class="form-group">
							<label asp-for="UserName" class="control-label">UserName</label>
							<InputText id="UserName" class="form-control" @bind-Value="@Model.UserName"></InputText>
						</div>
						<div class="form-group">
							<label asp-for="Password" class="control-label">Password</label>
							<InputText type="password" id="Password" class="form-control" @bind-Value="@Model.Password"></InputText>
						</div>
						<div class="slot-end">
							<input type="submit" value="Register" id="btn-register"  class="btn btn-primary" />
						</div>
					</EditForm>
				</div>
			</div>
		</div>
	</div>
</div>


