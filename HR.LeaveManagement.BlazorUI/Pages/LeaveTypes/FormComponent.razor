
<EditForm Model="@LeaveType" OnValidSubmit="@OnValidSubmit">
	<DataAnnotationsValidator/>
	<ValidationSummary/>

	<fieldset disabled="@Disabled">
		<div class="form-group">
			<label>Name:</label>
			<div>
				<InputText @bind-Value="@LeaveType.Name" class="form-control" />
				<ValidationMessage For="@(()=>LeaveType.Name)" />
			</div>
		</div>
		<div class="form-group">
			<label>Default Days:</label>
			<div>
				<InputNumber @bind-Value="@LeaveType.DefaultDays" class="form-control" />
				<ValidationMessage For="@(()=>LeaveType.DefaultDays)" />
			</div>
		</div>
		@if (!Disabled)
		{
			<div class="btn-end">
				<button type="submit" class="btn btn-success btn-block ">
					@ButtonText
				</button>
			</div>
		}
	</fieldset>
	
	<BackToList Target="leavetypes"/>
</EditForm>